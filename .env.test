# =============================================================================
# Test Environment Configuration
# =============================================================================
# This file is for testing only

# =============================================================================
# BITBUCKET CONFIGURATION
# =============================================================================

# Test Bitbucket credentials (use test accounts)
ATLASSIAN_SITE_NAME=test-company
ATLASSIAN_USER_EMAIL=test@test-company.com
ATLASSIAN_API_TOKEN=test_token

# Test Bitbucket Server (Alternative)
# BITBUCKET_USERNAME=test@test-company.com
# BITBUCKET_API_TOKEN=test_token
# BITBUCKET_BASE_URL=https://test-bitbucket.test-company.com

# =============================================================================
# TEST CONFIGURATION
# =============================================================================

# Test environment
NODE_ENV=test

# Test transport mode
TRANSPORT_MODE=stdio

# Test port
PORT=3001

# Enable debug for tests
DEBUG=true

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Test API settings
API_TIMEOUT=5000
API_MAX_RETRIES=1
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=60000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable all features for testing
ENABLE_ISSUES=true
ENABLE_PIPELINES=true
ENABLE_WEBHOOKS=true
ENABLE_PROJECTS=true
ENABLE_ADVANCED_SEARCH=true

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test timeout
TEST_TIMEOUT=30000

# Test database (if applicable)
TEST_DATABASE_URL=test://localhost:5432/test_db

# Test cache
TEST_CACHE_ENABLED=false

# =============================================================================
# MOCKING CONFIGURATION
# =============================================================================

# Enable API mocking for tests
ENABLE_API_MOCKING=true

# Mock API responses
MOCK_API_RESPONSES=true

# Mock file path
MOCK_API_FILE_PATH=./test/mocks/api-responses.json

# =============================================================================
# LOGGING
# =============================================================================

# Test logging
LOG_LEVEL=error
LOG_FORMAT=simple

# Minimal logging for tests
ENABLE_REQUEST_LOGGING=false
ENABLE_RESPONSE_LOGGING=false

# =============================================================================
# PERFORMANCE
# =============================================================================

# Disable performance features for tests
ENABLE_CACHING=false
ENABLE_COMPRESSION=false
ENABLE_CONNECTION_POOLING=false

# =============================================================================
# MONITORING
# =============================================================================

# Disable monitoring for tests
ENABLE_HEALTH_CHECKS=false
ENABLE_METRICS=false

# =============================================================================
# SECURITY
# =============================================================================

# Relaxed security for tests
CORS_ORIGIN=*
RATE_LIMIT_ENABLED=false

# =============================================================================
# TEST DATA
# =============================================================================

# Test workspace
TEST_WORKSPACE_SLUG=test-workspace

# Test repository
TEST_REPO_SLUG=test-repo

# Test user
TEST_USER_EMAIL=test@example.com

# =============================================================================
# COVERAGE
# =============================================================================

# Test coverage settings
COVERAGE_ENABLED=true
COVERAGE_THRESHOLD=80
COVERAGE_REPORTERS=text,lcov,html

# =============================================================================
# INTEGRATION TESTS
# =============================================================================

# Integration test settings
INTEGRATION_TESTS_ENABLED=false
INTEGRATION_TEST_TIMEOUT=60000

# =============================================================================
# E2E TESTS
# =============================================================================

# End-to-end test settings
E2E_TESTS_ENABLED=false
E2E_TEST_TIMEOUT=120000
E2E_TEST_BROWSER=chrome