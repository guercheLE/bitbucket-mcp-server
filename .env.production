# =============================================================================
# Production Environment Configuration
# =============================================================================
# This file is for production deployment only

# =============================================================================
# BITBUCKET CONFIGURATION
# =============================================================================

# Bitbucket Cloud (Atlassian) - Fill in your production values
ATLASSIAN_SITE_NAME=
ATLASSIAN_USER_EMAIL=
ATLASSIAN_API_TOKEN=

# Bitbucket Server (Alternative) - Fill in your production values
# BITBUCKET_USERNAME=
# BITBUCKET_API_TOKEN=
# BITBUCKET_BASE_URL=

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Production transport mode
TRANSPORT_MODE=http

# Production HTTP server port
PORT=3000

# Disable debug mode in production
DEBUG=false

# Production environment
NODE_ENV=production

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Production API settings
API_TIMEOUT=30000
API_MAX_RETRIES=3
API_RATE_LIMIT=1000
API_RATE_LIMIT_WINDOW=900000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable production features
ENABLE_ISSUES=true
ENABLE_PIPELINES=true
ENABLE_WEBHOOKS=true
ENABLE_PROJECTS=true
ENABLE_ADVANCED_SEARCH=true

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================

# Enable production caching
ENABLE_CACHING=true
CACHE_TTL=300000
CACHE_MAX_SIZE=1000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Production security settings
CORS_ORIGIN=https://yourdomain.com
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Production logging
LOG_LEVEL=info
LOG_FORMAT=json

# Selective logging for production
ENABLE_REQUEST_LOGGING=true
ENABLE_RESPONSE_LOGGING=false

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Production performance settings
ENABLE_CONNECTION_POOLING=true
CONNECTION_POOL_SIZE=20
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Production monitoring
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30000
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Production deployment settings
CLUSTER_MODE=true
WORKER_PROCESSES=4
GRACEFUL_SHUTDOWN_TIMEOUT=30000

# =============================================================================
# SCALING CONFIGURATION
# =============================================================================

# Load balancer settings
LOAD_BALANCER_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Backup configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30

# =============================================================================
# ALERTING
# =============================================================================

# Alerting configuration
ALERTING_ENABLED=true
ALERT_EMAIL=alerts@yourdomain.com
ALERT_WEBHOOK=https://yourdomain.com/alerts

# =============================================================================
# COMPLIANCE
# =============================================================================

# Compliance settings
AUDIT_LOGGING_ENABLED=true
DATA_RETENTION_DAYS=90
PRIVACY_MODE_ENABLED=true