# =============================================================================
# CI/CD Environment Configuration
# =============================================================================
# This file is for CI/CD pipelines only

# =============================================================================
# BITBUCKET CONFIGURATION
# =============================================================================

# CI/CD Bitbucket credentials
ATLASSIAN_SITE_NAME=ci-company
ATLASSIAN_USER_EMAIL=ci@ci-company.com
ATLASSIAN_API_TOKEN=ci_token

# CI/CD Bitbucket Server (Alternative)
# BITBUCKET_USERNAME=ci@ci-company.com
# BITBUCKET_API_TOKEN=ci_token
# BITBUCKET_BASE_URL=https://ci-bitbucket.ci-company.com

# =============================================================================
# CI/CD CONFIGURATION
# =============================================================================

# CI/CD environment
NODE_ENV=ci

# CI/CD transport mode
TRANSPORT_MODE=stdio

# CI/CD port
PORT=3000

# Enable debug for CI/CD
DEBUG=true

# =============================================================================
# API CONFIGURATION
# =============================================================================

# CI/CD API settings
API_TIMEOUT=10000
API_MAX_RETRIES=1
API_RATE_LIMIT=50
API_RATE_LIMIT_WINDOW=60000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable CI/CD features
ENABLE_ISSUES=true
ENABLE_PIPELINES=true
ENABLE_WEBHOOKS=true
ENABLE_PROJECTS=true
ENABLE_ADVANCED_SEARCH=true

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# CI/CD testing
TEST_ENABLED=true
TEST_WATCH_MODE=false
TEST_COVERAGE=true
TEST_PARALLEL=true

# Test timeouts
TEST_TIMEOUT=30000
INTEGRATION_TEST_TIMEOUT=60000
E2E_TEST_TIMEOUT=120000

# Test coverage
COVERAGE_ENABLED=true
COVERAGE_THRESHOLD=80
COVERAGE_REPORTERS=text,lcov,html,json

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================

# CI/CD build
BUILD_ENABLED=true
BUILD_OPTIMIZATION=true
BUILD_SOURCE_MAPS=false
BUILD_MINIFY=true

# Build artifacts
BUILD_OUTPUT_DIR=dist
BUILD_CLEAN=true
BUILD_CACHE=true

# =============================================================================
# LINTING AND FORMATTING
# =============================================================================

# CI/CD code quality
ESLINT_ENABLED=true
PRETTIER_ENABLED=true
TYPE_CHECK_ENABLED=true

# Linting settings
ESLINT_FIX=false
PRETTIER_WRITE=false
TYPE_CHECK_STRICT=true

# =============================================================================
# LOGGING
# =============================================================================

# CI/CD logging
LOG_LEVEL=info
LOG_FORMAT=simple

# CI/CD logging settings
ENABLE_REQUEST_LOGGING=false
ENABLE_RESPONSE_LOGGING=false

# =============================================================================
# PERFORMANCE
# =============================================================================

# CI/CD performance
ENABLE_CACHING=false
ENABLE_COMPRESSION=false
ENABLE_CONNECTION_POOLING=false

# =============================================================================
# MONITORING
# =============================================================================

# CI/CD monitoring
ENABLE_HEALTH_CHECKS=false
ENABLE_METRICS=false

# =============================================================================
# SECURITY
# =============================================================================

# CI/CD security
CORS_ORIGIN=*
RATE_LIMIT_ENABLED=false

# =============================================================================
# CI/CD DATA
# =============================================================================

# CI/CD workspace
CI_WORKSPACE_SLUG=ci-workspace

# CI/CD repository
CI_REPO_SLUG=ci-repo

# CI/CD user
CI_USER_EMAIL=ci@example.com

# =============================================================================
# MOCKING CONFIGURATION
# =============================================================================

# CI/CD mocking
ENABLE_API_MOCKING=true
MOCK_API_RESPONSES=true
MOCK_API_FILE_PATH=./test/mocks/api-responses.json

# =============================================================================
# INTEGRATION TESTS
# =============================================================================

# CI/CD integration tests
INTEGRATION_TESTS_ENABLED=true
INTEGRATION_TEST_TIMEOUT=60000
INTEGRATION_TEST_PARALLEL=true

# Integration test data
INTEGRATION_TEST_DATABASE=ci_test_db
INTEGRATION_TEST_USER=ci_test_user
INTEGRATION_TEST_PASSWORD=ci_test_password

# =============================================================================
# E2E TESTS
# =============================================================================

# CI/CD E2E tests
E2E_TESTS_ENABLED=false
E2E_TEST_TIMEOUT=120000
E2E_TEST_BROWSER=chrome
E2E_TEST_HEADLESS=true

# E2E test data
E2E_TEST_BASE_URL=https://ci.yourdomain.com
E2E_TEST_USER=ci_e2e_user
E2E_TEST_PASSWORD=ci_e2e_password

# =============================================================================
# DEPLOYMENT
# =============================================================================

# CI/CD deployment
DEPLOY_ENABLED=false
DEPLOY_ENVIRONMENT=ci
DEPLOY_STRATEGY=rolling

# Deployment settings
DEPLOY_TIMEOUT=300000
DEPLOY_ROLLBACK=true
DEPLOY_HEALTH_CHECK=true

# =============================================================================
# ARTIFACTS
# =============================================================================

# CI/CD artifacts
ARTIFACTS_ENABLED=true
ARTIFACTS_PATH=./artifacts
ARTIFACTS_RETENTION_DAYS=7

# Artifact types
ARTIFACTS_INCLUDE=dist,coverage,test-results
ARTIFACTS_EXCLUDE=node_modules,tmp,temp

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# CI/CD notifications
NOTIFICATIONS_ENABLED=true
SLACK_WEBHOOK=https://hooks.slack.com/services/ci
TEAMS_WEBHOOK=https://ci.webhook.office.com/webhook

# Notification triggers
NOTIFY_ON_SUCCESS=false
NOTIFY_ON_FAILURE=true
NOTIFY_ON_START=false

# =============================================================================
# REPORTING
# =============================================================================

# CI/CD reporting
REPORTING_ENABLED=true
REPORT_FORMATS=html,json,xml
REPORT_PATH=./reports

# Report types
TEST_REPORT_ENABLED=true
COVERAGE_REPORT_ENABLED=true
PERFORMANCE_REPORT_ENABLED=true

# =============================================================================
# CACHE
# =============================================================================

# CI/CD cache
CACHE_ENABLED=true
CACHE_KEY=ci-cache-{{ hashFiles('package-lock.json') }}
CACHE_PATHS=node_modules,.npm,.cache

# Cache settings
CACHE_RESTORE_KEYS=ci-cache-
CACHE_SAVE_IF=true