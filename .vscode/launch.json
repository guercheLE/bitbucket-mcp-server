{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Server (MCP)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/index.ts",
      "runtimeArgs": [
        "--loader",
        "ts-node/esm"
      ],
      "env": {
        "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.dev.json",
        "TRANSPORT_MODE": "stdio",
        "DEBUG": "true"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "sourceMaps": true
    },
    {
      "name": "Debug Server (HTTP)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/index.ts",
      "runtimeArgs": [
        "--loader",
        "ts-node/esm"
      ],
      "env": {
        "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.dev.json",
        "TRANSPORT_MODE": "http",
        "DEBUG": "true",
        "PORT": "3000"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "sourceMaps": true
    },
    {
      "name": "Debug CLI",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/cli/index.ts",
      "args": [
        "--help"
      ],
      "runtimeArgs": [
        "--loader",
        "ts-node/esm"
      ],
      "env": {
        "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.dev.json"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "sourceMaps": true
    }
  ]
}