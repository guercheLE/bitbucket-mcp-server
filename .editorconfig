# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript and JavaScript files
[*.{ts,tsx,js,jsx,mjs}]
indent_style = space
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
max_line_length = off

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

# Configuration files
[*.{ini,toml}]
indent_style = space
indent_size = 2

# Package files
[package.json]
indent_style = space
indent_size = 2

# Lock files
[package-lock.json]
indent_style = space
indent_size = 2

# Documentation
[*.{txt,rst}]
indent_style = space
indent_size = 2
max_line_length = 80

[*.{ts,js}]
quote_type = single

[Makefile]
indent_style = tab