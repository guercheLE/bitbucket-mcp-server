{
  "name": "bitbucket-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for Bitbucket integration with webhook support",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest --config jest.config.mjs",
    "test:unit": "jest --config jest.config.mjs --testPathPattern=unit",
    "test:integration": "jest --config jest.config.mjs --testPathPattern=integration",
    "test:webhook": "jest --config jest.config.mjs --testPathPattern=webhook",
    "dev": "tsc --watch",
    "start": "node dist/index.js"
  },
  "keywords": [
    "mcp",
    "bitbucket",
    "webhook",
    "pipeline",
    "cicd",
    "automation"
  ],
  "author": "Bitbucket MCP Server Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}