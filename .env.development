# =============================================================================
# Development Environment Configuration
# =============================================================================
# This file is for development environment only

# =============================================================================
# BITBUCKET CONFIGURATION
# =============================================================================

# Development Bitbucket credentials
ATLASSIAN_SITE_NAME=dev-company
ATLASSIAN_USER_EMAIL=dev@dev-company.com
ATLASSIAN_API_TOKEN=dev_token

# Development Bitbucket Server (Alternative)
# BITBUCKET_USERNAME=dev@dev-company.com
# BITBUCKET_API_TOKEN=dev_token
# BITBUCKET_BASE_URL=https://dev-bitbucket.dev-company.com

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development environment
NODE_ENV=development

# Development transport mode
TRANSPORT_MODE=stdio

# Development port
PORT=3000

# Enable debug for development
DEBUG=true

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Development API settings
API_TIMEOUT=20000
API_MAX_RETRIES=2
API_RATE_LIMIT=200
API_RATE_LIMIT_WINDOW=60000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable all features for development
ENABLE_ISSUES=true
ENABLE_PIPELINES=true
ENABLE_WEBHOOKS=true
ENABLE_PROJECTS=true
ENABLE_ADVANCED_SEARCH=true

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Enable development tools
ENABLE_HOT_RELOAD=true
WATCH_MODE=true
GENERATE_SOURCE_MAPS=true

# Development server
LOCAL_DEV_SERVER=true
DEV_SERVER_PORT=3001

# =============================================================================
# LOGGING
# =============================================================================

# Development logging
LOG_LEVEL=debug
LOG_FORMAT=simple

# Enable all logging for development
ENABLE_REQUEST_LOGGING=true
ENABLE_RESPONSE_LOGGING=true

# =============================================================================
# PERFORMANCE
# =============================================================================

# Development performance settings
ENABLE_CACHING=true
CACHE_TTL=60000
CACHE_MAX_SIZE=100

ENABLE_COMPRESSION=false
ENABLE_CONNECTION_POOLING=false

# =============================================================================
# MONITORING
# =============================================================================

# Development monitoring
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=60000
ENABLE_METRICS=true
METRICS_PORT=9091

# =============================================================================
# SECURITY
# =============================================================================

# Relaxed security for development
CORS_ORIGIN=*
RATE_LIMIT_ENABLED=false

# =============================================================================
# DEVELOPMENT DATA
# =============================================================================

# Development workspace
DEV_WORKSPACE_SLUG=dev-workspace

# Development repository
DEV_REPO_SLUG=dev-repo

# Development user
DEV_USER_EMAIL=dev@example.com

# =============================================================================
# TESTING
# =============================================================================

# Development testing
TEST_ENABLED=true
TEST_WATCH_MODE=true
TEST_COVERAGE=true

# =============================================================================
# DEBUGGING
# =============================================================================

# Debugging tools
ENABLE_DEBUGGER=true
DEBUGGER_PORT=9229
DEBUGGER_HOST=localhost

# Source maps
SOURCE_MAPS_ENABLED=true
SOURCE_MAPS_TYPE=inline

# =============================================================================
# HOT RELOAD
# =============================================================================

# Hot reload configuration
HOT_RELOAD_ENABLED=true
HOT_RELOAD_PORT=3002
HOT_RELOAD_HOST=localhost

# File watching
WATCH_PATTERNS=src/**/*.ts,src/**/*.js
WATCH_IGNORE_PATTERNS=node_modules/**,dist/**,coverage/**

# =============================================================================
# DEVELOPMENT SERVER
# =============================================================================

# Development server settings
DEV_SERVER_HOST=localhost
DEV_SERVER_PORT=3000
DEV_SERVER_HTTPS=false

# Proxy settings
PROXY_ENABLED=false
PROXY_TARGET=http://localhost:3001
PROXY_PATH=/api

# =============================================================================
# CODE QUALITY
# =============================================================================

# Code quality tools
ESLINT_ENABLED=true
PRETTIER_ENABLED=true
TYPE_CHECK_ENABLED=true

# Auto-fix settings
AUTO_FIX_ON_SAVE=true
AUTO_FORMAT_ON_SAVE=true

# =============================================================================
# DEVELOPMENT WORKFLOW
# =============================================================================

# Development workflow
GIT_HOOKS_ENABLED=true
PRE_COMMIT_HOOKS=true
PRE_PUSH_HOOKS=true

# Branch naming
BRANCH_PREFIX=feature/
BRANCH_SEPARATOR=/